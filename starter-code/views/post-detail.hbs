<div class="card mb-3">
    <img src="{{photo.imgPath}}" class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title">{{photo.title}}</h5>
      <p class="card-text">{{photo.description}}</p>
    </div>
</div>
<h4>Add comment</h4>
<form action="{{post.id}}" method="POST" enctype="multipart/form-data"> 
    <label for="content">Comment</label>
    <input type="text" name="content" id="content">
    <label for="photo"></label>
    <input type="file" name="photo" id="photo" accept="image/*">
    <input type="submit" value="Post">
</form>
<h4>Comments</h4>
{{#each comments}}
<div class="card mb-3" style="max-width: 540px;">
  <div class="row no-gutters">
    <div class="col-md-4">
      <img src="{{this.imgPath}}" class="card-img" alt="{{this.title}}">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">Comment</h5>
        <p class="card-text">{{this.content}}</p>
        <p class="card-text"><small class="text-muted">{{this.createdAt}}</small></p>
      </div>
    </div>
  </div>
</div>
{{/each}}

